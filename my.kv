<IndexWindow>:
    name: "original"

    title: title
    logn: logn
    getstart: getstart
    help: help
    about: about
    privacy: privacy
    terms: terms


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "indexbackground.jpg"

    FloatLayout:
        size: root.width, root.height

        ShadowLabel:
            id: title
            text: 'sustain.'
            font_name: "Antique Olive Regular"
            size_hint: 1.0, 1.52
            decal: 20, -20
            tint: .5, .5, 1, .3
            color: (0,0,0,1)
            font_size:200
            bold: True
            pos_hint: {"y": -0.1}

        Button:
            id: help
            text: "Help"
            size_hint: 0.1, 0.1
            color: (0,0,0,1)
            font_name: "Antique Olive Regular"
            pos_hint:{"x":0.1,"y":0.01}
            background_color: 0,0,0,0
            font_size: 60
            on_press: root.open_popup()

        Button:
            id: about
            text: "About"
            size_hint: 0.1, 0.1
            color: (0,0,0,1)
            pos_hint:{"x":0.3,"y":0.01}
            background_color: 0,0,0,0
            font_name: "Antique Olive Regular"
            font_size: 60
            on_press: root.popup_about()

        Button:
            id: privacy
            text: "Privacy"
            size_hint: 0.1, 0.1
            color: (0,0,0,1)
            pos_hint:{"x":0.6,"y":0.01}
            background_color: 0,0,0,0
            font_name: "Antique Olive Regular"
            font_size: 60
            on_press: root.popup_privacy()

        Button:
            id: terms
            text: "Terms"
            size_hint: 0.1, 0.1
            pos_hint:{"x":0.8,"y":0.01}
            color: (0,0,0,1)
            background_color: 0,0,0,0
            font_name: "Antique Olive Regular"
            font_size: 60
            on_press: root.popup_terms()

        Button:
            id: logn
            pos_hint:{"x":0.22,"y":0.3}
            size_hint: 0.55, 0.1
            font_size: 70
            text: "Log In"
            color: (1,1,1,1)
            bold: True
            on_release:
                root.manager.transition.direction = "right"
                root.login()
            background_color: 0,0,0,0
            background_normal: ""
            canvas.before:
                Color:
                    rgba: (0,0,0,1) if self.state=='normal' else (0,0.56,0.58,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

        Button:
            id: getstart
            pos_hint:{"x":0.22,"y":0.45}
            size_hint: 0.55, 0.1
            halign: "center"
            valign: "middle"
            multiline: True
            font_size: 70
            text: "Get Started"
            color: (1,1,1,1)
            bold: True
            on_release:
                root.manager.transition.direction = "left"
                root.createBtn()
            background_color: 0,0,0,0
            background_normal: ""
            canvas.before:
                Color:
                    rgba: (0,0.56,0.58,1) if self.state=='normal' else (0,0,0,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

