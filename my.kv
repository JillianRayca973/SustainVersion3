<ScreenManagement>:
    id: screen_manager
    screenthermo: screenthermo



<ShadowLabel>:
    canvas.before:
        Color:
            rgba: root.tint

        Rectangle:
            pos:
                int(self.center_x - self.texture_size[0] / 2.) + root.decal[0],\
                int(self.center_y - self.texture_size[1] / 2.) + root.decal[1]

            size: root.texture_size
            texture: root.texture

        Color:
            rgba: 1, 1, 1, 1

<CustomPopup>:
    size_hint: 0.5,0.7
    auto_dismiss: False
    title: "Help"
    title_color: 0, 0, 0, 1
    separator_color: (0,0.56,0.58,1)
    background: "white.jpg"
    FloatLayout:

        Button:
            id: closepopup1
            size_hint: 0.5,0.15
            pos_hint: {"x":0.25,"y":0.05}
            text: "close"
            background_normal: ""
            color: 1, 1, 1, 1
            on_press: root.dismiss()
            background_color: 0,0,0,0
            canvas.before:
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15]
                Color:
                    rgba: 0, 0, 0, 1 if self.state=='normal' else  0, 0, 1, 1

